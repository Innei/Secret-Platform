<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/static/main.css" />
    <title>注册 -- 秘Po</title>
    <style>
      body::before {
        background: linear-gradient(45deg, #cfedf1, #ccc8c7);
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -99;
      }
      #login_wrap {
        width: 980px;
        min-height: 500px;
        border-radius: 10px;
        font-family: 'neo';
        overflow: hidden;
        box-shadow: 0px 0px 120px rgba(0, 0, 0, 0.25);
        position: fixed;
        top: 50%;
        right: 50%;
        margin-top: -250px;
        margin-right: -490px;
      }
      #login {
        width: 50%;
        height: 100%;
        min-height: 500px;
        background: linear-gradient(45deg, #9a444e, #e06267);
        position: relative;
        float: right;
      }
    </style>
  </head>
  <body>
    <main>
      <div id="login_wrap">
        <div id="login">
          <!-- 登录注册切换动画 -->
          <div id="status">
            <i style="top: 0">Log</i>
            <i style="top: 35px">Sign</i>
            <i style="right: 5px">in</i>
          </div>
          <span>
            <form action="post">
              <p class="form">
                <input type="text" id="user" placeholder="username" />
              </p>
              <p class="form">
                <input type="password" id="passwd" placeholder="password" />
              </p>
              <p class="form confirm">
                <input
                  type="password"
                  id="confirm-passwd"
                  placeholder="confirm password"
                />
              </p>
              <input
                type="button"
                value="Log in"
                class="btn"
                onclick="login()"
                style="margin-right: 20px;"
              />
              <input
                type="button"
                value="Sign in"
                class="btn"
                onclick="signin()"
                id="btn"
              />
            </form>
            <a href="#">Forget your password?</a>
          </span>
        </div>

        <div id="login_img">
          <!-- 图片绘制框 -->
          <span class="circle">
            <span></span>
            <span></span>
          </span>
          <span class="star">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
          </span>
          <span class="fly_star">
            <span></span>
            <span></span>
          </span>
          <p id="title"><i>C</i><i>L</i><i>O</i><i>U</i><i>D</i></p>
        </div>
      </div>
    </main>
    <footer>
      <p>© <span id="time"></span> Secret Platform. All rights reserved.</p>
    </footer>
  </body>
</html>

<script>
  var time = document.getElementById('time')
  time.innerText = new Date().getFullYear()
</script>
